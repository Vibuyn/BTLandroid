<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LienHeActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFEBCD"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Liên hệ" />

    <EditText
        android:id="@+id/txtten"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Vuong Anh Quan"
        app:layout_constraintEnd_toEndOf="@+id/toobar"
        app:layout_constraintStart_toStartOf="@+id/toobar"
        app:layout_constraintTop_toBottomOf="@+id/toobar" />
    <EditText
        android:id="@+id/txtsdt"
        android:layout_width="160dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="SĐT: 0392598586"
        app:layout_constraintEnd_toEndOf="@+id/txtten"
        app:layout_constraintStart_toStartOf="@+id/txtten"
        app:layout_constraintTop_toBottomOf="@+id/txtten" />
    <EditText
        android:id="@+id/txtemail"
        android:layout_width="280dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Email: quan02vip@gmail.com"
        app:layout_constraintEnd_toEndOf="@+id/txtsdt"
        app:layout_constraintStart_toStartOf="@+id/txtsdt"
        app:layout_constraintTop_toBottomOf="@+id/txtsdt" />

</androidx.constraintlayout.widget.ConstraintLayout>